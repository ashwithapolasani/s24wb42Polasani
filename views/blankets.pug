extends layout

block content
  h1= title
  
  div.container-fluid
    div.row
      -
        let results = [
          { item_type: 'Blanket 1', item_name: 'Blanket 1', item_price: 0.75 },
          { item_type: 'Blanket 2', item_name: 'Blanket 1', item_price: 20 },
          { item_type: 'Blanket 3', item_name: 'Blanket 1', item_price: 10 }
        ]
        
      each blankets,index in results
        .col-sm-2 
        div.col-sm-2(onclick=`buy(${index})`)
        
          p Blanket Type: #{blankets.item_type}
          p name: #{blankets.item_name}
          p Price: $#{blankets.item_price.toFixed(2)}

  a(href="/") Back to index

    script. 
        function buy(index) {
            alert(`You purchased item ${index}`);
        }